<h1>Edit Salar</h1>

<div class="row justify-content-center">
  <%= form_with model: @salar  do |form|%>
    <div class="form-group">
      <%=form.label :Salar_Name%><br>
      <%= form.text_field :salar_name, placeholder: 'Enter Product Name'%>
    </div><br>
    <div class="form-group">
      <%=form.label :Product_Name%><br>
      <%= form.text_field :product_name, placeholder: 'Enter Product Name'%>
    </div><br>
    <div class="form-group">
      <%=form.label :City_Name%><br>
      <%= form.text_field :city, placeholder: 'Enter Product Name'%>
    </div><br>
    <div class="form-group">
          <%= form.submit "Edit", class: 'btn btn-primary'%>
        </div>
  <%end%>
</div>