<h1>Edit Buyer </h1>

<div class="row justify-content-center">
  <%= form_with model: @buyer  do |form|%>
    <div class="form-group">
      <%=form.label :Buyer_Name%><br>
      <%= form.text_field :name, placeholder: 'Enter Product Name'%>
    </div><br>
    <div class="form-group">
      <%=form.label :City_name%><br>
      <%= form.text_field :city, placeholder: 'Enter Product Name'%>
    </div><br>
    <div class="form-group">
          <%= form.submit "Edit", class: 'btn btn-primary'%>
        </div>
  <%end%>
</div>